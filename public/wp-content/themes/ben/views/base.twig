<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    {{ function('wp_head') }}
</head>

<body>
    <header>
        {% block header %}
        {% include "header.twig" %}
        {% endblock %}
    </header>
    {% include "menu.twig" %}

    <div class="transition-loader"></div>
    <div class="cursor big-cursor"></div>
    <div class="cursor inner-cursor inner-cursor--1"></div>
    <div class="cursor inner-cursor inner-cursor--2"></div>
    <div class="cursor inner-cursor inner-cursor--3"></div>
    <div class="cursor inner-cursor inner-cursor--4"></div>
    <div class="cursor inner-cursor inner-cursor--5"></div>

    <main data-router-wrapper data-scroll-container>
        {% block content %}
        content goes here
        {% endblock %}
    </main>
    {{ function('wp_footer') }}
</body>

</html>